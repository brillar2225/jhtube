extends ../templates/layout

block content
  section.input-forms__container
    h1.sr-only Join JHTube from the below form.
    if errMsg 
      h2=errMsg
    .input-forms__box
      h1.input-forms__title Sign Up
      form.input-forms__form(method="POST", enctype="multipart/form-data") 
        label.input-forms__label(for="username") Username
        input.input-forms__input(type="text", name="username", id="username", placeholder="Enter username (Required)", required)
        label.input-forms__label(for="email") E-Mail
        input.input-forms__input(type="email", name="email", id="email", placeholder="Enter email (Required)", required)
        label.input-forms__label(for="nickname") Nickname
        input.input-forms__input(type="text", name="nickname", id="nickname", placeholder="Enter nickname")
        label.input-forms__label(for="password") Password
        input.input-forms__input(type="password", name="password", id="password", placeholder="Enter password (Required)", required)
        label.input-forms__label(for="password2") Confirm Password
        input.input-forms__input(type="password", name="password2", id="password2", placeholder="Confirm password (Required)", required)
        label.input-forms__label(for="location") Location
        input.input-forms__input(type="text", name="location", id="location", placeholder="Enter location")
        label.input-forms__label(for="avatar") (Required) Avatar
        input.input-forms__input(type="file", name="avatar", id="avatar", accept="image/*", required)
        input(type="submit", value="Join")
      .link__box
        .link__hr
        span Already have an account? 
        a(href='/login') Login now 

block scripts 
  script(src='/assets/js/toggleNavbar.js')